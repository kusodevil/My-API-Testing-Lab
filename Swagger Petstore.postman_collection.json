{
	"info": {
		"name": "Swagger Petstore Clean",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "pet",
			"item": [
				{
					"name": "Add a new pet to the store",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// 1. 優先抓資料檔的值，沒有的話給預設值",
									"const testCaseName = pm.iterationData.get(\"case\") || \"手動單次測試\";",
									"const expectedCode = pm.iterationData.get(\"expectedCode\") || 200;",
									"",
									"// 2. 執行斷言",
									"pm.test(testCaseName, function () {",
									"    pm.response.to.have.status(expectedCode);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"{{petName}}\",\n  \"photoUrls\": [\n    \"https://example.com/photo.jpg\"\n  ],\n  \"status\": \"{{status}}\"\n}"
						},
						"url": {
							"raw": "https://petstore.swagger.io/v2/pet",
							"protocol": "https",
							"host": [
								"petstore",
								"swagger",
								"io"
							],
							"path": [
								"v2",
								"pet"
							]
						}
					}
				}
			]
		}
	]
}