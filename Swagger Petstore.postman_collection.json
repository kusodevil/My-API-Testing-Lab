{
	"info": {
		"name": "Swagger Petstore Chaining - Stable Version",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. 新增寵物",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// 生成一個隨機但合理的數字 ID，避免伺服器溢位",
							"const randomId = Math.floor(Math.random() * 1000000) + 8888;",
							"pm.environment.set(\"customPetId\", randomId);"
						]
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"新增成功\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [{ "key": "Content-Type", "value": "application/json" }],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"id\": {{customPetId}},\n  \"name\": \"{{petName}}\",\n  \"status\": \"{{status}}\"\n}"
				},
				"url": {
					"raw": "https://petstore.swagger.io/v2/pet",
					"protocol": "https",
					"host": ["petstore", "swagger", "io"],
					"path": ["v2", "pet"]
				}
			}
		},
		{
			"name": "2. 查詢寵物",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 如果伺服器還是 404，可能是資料庫真的太慢，這是環境問題而非腳本問題",
							"pm.test(\"狀態碼應為 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"if (pm.response.code === 200) {",
							"    const jsonData = pm.response.json();",
							"    pm.test(\"驗證名字是否正確\", function () {",
							"        pm.expect(jsonData.name).to.eql(pm.iterationData.get(\"petName\"));",
							"    });",
							"}"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"url": {
					"raw": "https://petstore.swagger.io/v2/pet/{{customPetId}}",
					"protocol": "https",
					"host": ["petstore", "swagger", "io"],
					"path": ["v2", "pet", "{{customPetId}}"]
				}
			}
		}
	]
}